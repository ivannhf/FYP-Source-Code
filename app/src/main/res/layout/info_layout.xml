<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="@string/app_version"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/desciption"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="This application is for studying the GNSS Raw Measurement. From project Innovation of GPS Positioning Using Android Smartphone." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="20dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/deviceSpecTitle"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="Device Specification"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deviceModel"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/deviceManufacturer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/devicePlatform"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="20dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/supoortTitle"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:text="Supported API Functions"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gainCtrl_Title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="100dp"
                android:gravity="center_vertical"
                android:text="Automatic Gain Control Level" />

            <TextView
                android:id="@+id/gainCtrl_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="16dp"
                android:width="30dp"
                android:gravity="center_vertical"
                android:text="?"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/carrierCyc_Title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="100dp"
                android:gravity="center_vertical"
                android:text="Carrier Cycles" />

            <TextView
                android:id="@+id/carrierCyc_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="30dp"
                android:gravity="center_vertical"
                android:text="?"
                android:textAlignment="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carrierFreq_Title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="100dp"
                android:gravity="center_vertical"
                android:text="Carrier Frequency" />

            <TextView
                android:id="@+id/carrierFreq_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="16dp"
                android:width="30dp"
                android:gravity="center_vertical"
                android:text="?" />

            <TextView
                android:id="@+id/carrierPhase_Title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="100dp"
                android:gravity="center_vertical"
                android:text="Carrier Phase" />

            <TextView
                android:id="@+id/carrierPhase_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="30dp"
                android:gravity="center_vertical"
                android:text="?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carrierPhaUn_Title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="100dp"
                android:gravity="center_vertical"
                android:text="Carrier Phase Uncertainty" />

            <TextView
                android:id="@+id/carrierPhaUn_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="16dp"
                android:width="30dp"
                android:gravity="center_vertical"
                android:text="?" />

            <TextView
                android:id="@+id/SNR_Title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="100dp"
                android:gravity="center_vertical"
                android:text="SNR" />

            <TextView
                android:id="@+id/SNR_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:width="30dp"
                android:gravity="center_vertical"
                android:text="?" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="20dp"
        android:background="@color/colorAccent" />

</LinearLayout>
